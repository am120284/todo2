<head>
<div class="container">
	<h1>Todo Items</h1>
	<style>
		 .one {  
		      background: #444;  
		      color: white;  
		    
		      padding-top: 10px;  
		      padding-right: 10px;  
		      padding-bottom: 0.25in;  
		      padding-left: 5em;  
	   		 }  
	</style>
</head>
<body>

	<div class="one">
		<h3>Todo List</h3>
		<p><%= link_to "Add an item to the list", new_todo_path %></p>
		<% @todos.each do |t| %>
			<%= "#{t.days_left} ,days left till expiration"%>
			<p>
				<strong><%= t.name %></strong>
				<small><%= link_to "Mark as Completed", todo_path(t), :method => :put %></small>
			</p>
		<% end %>
		<br>

		<h3>Completed Tasks</h3>

		<% @todone.each do |t| %>
			<p>
				<%=t.name %>
				<small><%= link_to 'Remove', t, :confirm => 'is it ok to remove this item?', :method => :delete %></small>
			</p>
		<% end %>
		<p><%= link_to "Add an item to the list", new_todo_path %></p>
	</div>
	</div>
</body>